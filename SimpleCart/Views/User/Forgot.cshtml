@{
  Layout = "_Layout";
}

<div class = "container">
  <div class = "row">
    <div class="col-md-12 loginCol">
      <h1>Enter your information to gain access to your account:</h1>
        <form action='/User/Forgot/Update' method='post'>
          <div class='form-group'>
            <label for='nameForgot'>Name</label>
            <input id='nameForgot' name='nameForgot' class='form-control' type='text' required>
          </div>
          <div class='form-group'>
            <label for='usernameForgot'>Username</label>
            <input id='usernameForgot' name='usernameForgot' class='form-control' type='text' required>
          </div>
          <div class='form-group'>
            <label for='emailForgot'>Email</label>
            <input id='emailForgot' name='emailForgot' class='form-control' type='text'>
          </div>
          <button type="submit" class="btn">Submit</button>
          <hr></hr>
          <h5>New User? Create an account.</h5>
          <br>
          <button type="button" class="btn"><a href="/User/Form/@ViewBag.sessionId">Create a new Account</a></button>
          <br>
        </form>
    </div>
  </div>
</div>


