@{
  Layout = "_Layout";
}

  <div class = "container">
  <div class = "row">
    <div class="col-md-12 loginCol">
      <h1>Sign in</h1>
        <form action='/User/Login' method='post'>
          <div class='form-group'>
            <label for='usernameLogin'>Username</label>
            <input id='usernameLogin' name='usernameLogin' class='form-control' type='text' required>
          </div>
          <div class='form-group'>
            <label for='passwordLogin'>Password</label><a href ="/User/Forgot/@ViewBag.sessionId"> Forgot Password?</a>
            <input id='passwordLogin' name='passwordLogin' class='form-control' type="password" required>
          </div>
          <button type="submit" class="btn">Sign in</button>
          <hr></hr>
          <h5>New User? Create an account.</h5>
          <br>
          <button type="button" class="btn"><a href="/User/Form/@ViewBag.sessionId">Create a new Account</a></button>
        </form>
    </div>
  </div>


