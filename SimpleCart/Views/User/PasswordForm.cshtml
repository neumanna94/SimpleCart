@{
  Layout = "_Layout";
}

<div class = "container">
  <div class = "row">
    <div class="col-md-12 loginCol">
      <h1>Enter your information to gain access to your account:</h1>
        <form action='/User/Forgot/Password/@ViewBag.sessionId' method='post'>
          <div class='form-group'>
            <label for='passwordForgot'>New Password:</label>
            <input id='passwordForgot' name='passwordForgot' class='form-control' type='text' required>
          </div>
          <div class='form-group'>
            <label for='passwordForgot2'>Confirm New Password:</label>
            <input id='passwordForgot2' name='passwordForgot2' class='form-control' type='text'>
          </div>
          <button type="submit" class="btn">Submit</button>
          <hr></hr>
        </form>
    </div>
  </div>
</div>


