@{
  Layout = "_Layout";
}

  <div class = "container">
    <div class = "jumbotron">
      <h1>Simple Cart Site</h1>
    </div>
    <div class="row">
        <div class="col-md-7">
            <h1>@Model.GetName()</h1>
            <hr>
            <img src="@Model.GetImgUrl()" alt="Picture" height="400" width="400">
        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-6">
                    <h2> $ @Model.GetCost() </h2>
                </div>
                <div class="col-md-6">
                    <a href="/User/Cart"></a><button type="button" class="btn">Add to Cart</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3> @Model.GetDescription()</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/Item">Continue Shopping</a>
        </div>
    </div>


