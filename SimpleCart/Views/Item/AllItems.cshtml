@{
  Layout = "_Layout";
}

<div class = "container">
    <div class = "jumbotron">
      <h1>Simple Cart Site</h1>
    </div>
    <div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-7">
                <h3><a href="/Item/Detail/@item.GetId()">@item.GetName()</a> </h3>
                <hr>
                <img src="@item.GetImgUrl()" alt="Picture" height="400" width="400">
            </div>
            <div class="col-md-5">
                <div class="row">
                    <div class="col-md-6">
                        <h2> $ @item.GetCost() </h2>
                    </div>
                    <div class="col-md-6">
                        <a href="/User/Cart/@item.GetId()"><button type="button" class="btn">Add to Cart</button></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3> @item.GetDescription()</h3>
                    </div>
                </div>
            </div>
        </div>
      }
    </div>
</div>


<script src="text/javascript">
$(document).ready(function(){
})
</script>
