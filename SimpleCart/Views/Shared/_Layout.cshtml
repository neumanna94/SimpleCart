<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Simple Template Layout</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <link rel='stylesheet' href="~/css/styles.css">
  </head>
  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-md-9">
          </div>
          @if (ViewBag.sessionId != -1)
          {
            <div class="col-md-1">
              <a href="#">@ViewBag.myUserName</a>
            </div>
            <div class="col-md-1">
              <a href="/Cart/Display/@ViewBag.sessionId">Cart</a>
            </div>
            <div class="col-md-1">
              <a href="/User/Logout/@ViewBag.sessionId">Logout</a>
            </div>
          }
          else
          {
            <div class="col-md-1">
              <p>Guest</p>
            </div>
            <div class="col-md-1">
              <a href="/Cart/Display/@ViewBag.sessionId"><span class="glyphicon glyphicon-shopping-cart"></span>Cart</a>
            </div>
            <div class="col-md-1">
              <a href="/User/Login"><span class="glyphicon glyphicon-user"></span>Login</a>
            </div>
          }
        </div>
      </div>
    </header>
    <div class="container" id="jumbotron">
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron">
            <h1>Simple Cart Site</h1>
          </div>
        </div>
      </div>
    </div>
    @RenderBody()
    @Html.Partial("Footer")
  </body>
</html>
