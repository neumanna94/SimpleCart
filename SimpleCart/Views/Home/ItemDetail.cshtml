@{
  Layout = "_Layout";
}

  <div class = "container">
    <div class = "jumbotron">
      <h1>Simple Cart Site</h1>
    </div>
    <div class="row">
        <div class="col-md-7">
            <h1>@Model.GetName()</h1>
            <img src="@Model.GetImage()" alt="Picture">
        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-6">
                    <h3> @Model.GetCost() </h3>
                </div>
                <div class="col-md-6">
                    <button type="button" name="button">Add to Cart</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3> @Model.GetDescription()</h3>
                </div>
            </div>
        </div>
    </div>


<script src="text/javascript">
$(document).ready(function(){
})
</script>
